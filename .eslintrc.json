{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "./webpack/dev.js"
            }
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": [
            0
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "__REDUX_DEVTOOLS_EXTENSION_COMPOSE__"
                ]
            }
        ],
        "linebreak-style": 0
    }
}